@{
    Layout = "~/Areas/FileManager/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card my-5">
        <div class="card-toolbar">
            <div class="btn-group" role="group" aria-label="Top Toolbar">
                <button type="button" class="btn btn-secondary go-back">
                    <i class="fal fa-arrow-left"></i>
                </button>
                <button type="button" class="btn btn-secondary disabled"><i class="fal fa-arrow-right"></i></button>
            </div>
            <div class="btn-group" role="group" aria-label="Top Toolbar">
                <button type="button" class="btn btn-default new-file">
                    <i class="fal fa-file-plus"></i>
                </button>
                <button type="button" class="btn btn-default new-folder">
                    <div class="fal fa-plus"></div>
                    <i class="fal fa-folder"></i>
                </button>
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#upload-modal">
                    <i class="fal fa-upload"></i>
                </button>
                <button type="button" class="btn btn-outline-primary Select-Item fa-pull-right" style="display:none;">
                    <i class="fal fa-check"></i>
                </button>
            </div>
        </div>

        <div class="card-address-bar">
            <div class="input-group">
                <input type="text" class="form-control" name="current-path"
                       value="ROOT">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="update">
                        <i class="fal fa-sync-alt"></i>
                    </button>
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fal fa-arrow-right"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body" id="main-body">
            <div id="items-wrapper"></div>
            <div class="loader">
                <i class="fas fa-2x fa-spinner fa-pulse"></i>
                <div>Please Wait&hellip;</div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="upload-modal" tabindex="-1" role="dialog" aria-labelledby="upload-modal-title" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="upload-modal-title">Upload New File(s)</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="uploaders"></div>
                <div class="text-right mb-3">
                    <button class="btn btn-outline-success" id="new-uploader">
                        <i class="fal fa-plus"></i>
                    </button>
                </div>
                <div class="modal-footer pb-0 px-0">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="start-upload">Start Upload</button>
                </div>
            </div>
        </div>
    </div>
</div>